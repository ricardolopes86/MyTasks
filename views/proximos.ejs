<% include partials/header %>
<% include partials/nav %>
<main class="container">
    <div class="row">
        <p> </p>
    </div>
    <div class="row">
        <% include partials/menu %>
        <div class="col-md-9">
            <div class="panel panel-default">
                <div class="panel-heading">Tarefas</div>
                <div class="panel-body">
                    <% if (tarefas.length > 0) {%>
                    <% for(var i=0; i< tarefas.length ; i++) { %>
                    <div class="row">
                        <div class="col-md-4">
                            <h4><%= tarefas.titulo %></h4>
                        </div>
                        <div class="col-md-2 col-sm-offset-6">
                            <a href="#" data-toggle="tooltip" data-placement="top" title="Concluir a tarefa"><i class="fa fa-check-square" aria-hidden="true"></i></a>
                            <a href="#" data-toggle="tooltip" data-placement="top" title="Deleter a tarefa"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </div>
                    </div>
                    <%}%>
                    <% } else {%>
                        <div class="col-md-2">
                            <h4>Nenhuma atividade encontrada.</h4>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</main>

</body>
</html>