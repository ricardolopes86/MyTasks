<header>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="/home">
                    <span class="fa fa-calendar-check-o" aria-hidden="true" style="display: block"></span>
                </a>

            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <% if (typeof user === 'undefined' || !user) { %>
                <form class="navbar-form navbar-right" action="/login" method="post">
                    <div class="form-group">
                        <div class="input-group"><input type="text" class="form-control" placeholder="Username">
                            <span class="input-group-addon">
                                <span class="fa fa-user-circle-o"></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group"><input type="password" class="form-control" placeholder="Password">
                            <span class="input-group-addon">
                                <span class="fa fa-asterisk"></span>
                            </span></div>
                    </div>
                    <button type="submit" class="btn btn-default">Login</button>
                </form>

                <% } else { %>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <img src="https://avatars.io/gravatar/<%= user.local.email %>" class="dropdown-toggle img-circle" data-toggle="dropdown">
                        <ul class="dropdown-menu dropdown-menu-left">
                            <li><a href="/profile">Profile</a></li>
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
                <% } %>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/adicionar"><i class="glyphicon glyphicon-plus" aria-hidden="true"></i> Add Tarefa</a></li>
                </ul>
            </div>
        </div>
    </nav>
</header>