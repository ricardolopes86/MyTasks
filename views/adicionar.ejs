    <div class="row">
        <div><p> </p></div>
    </div>
    <div class="row">
        <% include partials/menu %>
        <div class="col-md-9">
            <div class="panel panel-default">
                <div class="panel-heading">Adicionar Nova Tarefa/Evento</div>
                <div class="panel-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="titulo" class="col-sm-2 control-label">Título da Tarefa</label>
